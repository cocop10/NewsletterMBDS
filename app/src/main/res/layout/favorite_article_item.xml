<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fav_item_list_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/articles_avatar"
        android:src="@drawable/ic_baseline_article_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fav_item_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fav_item_list_description"
        app:layout_constraintStart_toEndOf="@+id/fav_item_list_avatar"
        app:layout_constraintTop_toTopOf="@+id/fav_item_list_avatar"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Article" />

    <TextView
        android:id="@+id/fav_item_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:maxWidth="250dp"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="@+id/fav_item_list_avatar"
        app:layout_constraintStart_toEndOf="@+id/fav_item_list_avatar"
        app:layout_constraintTop_toBottomOf="@+id/fav_item_list_name"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Description" />

    <TextView
        android:id="@+id/fav_item_list_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxWidth="250dp"
        android:maxLines="3"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fav_item_list_avatar"
        app:layout_constraintTop_toBottomOf="@+id/fav_item_list_avatar"
        tools:text="Auteur" />



    <ImageButton
        android:id="@+id/fav_item_list_favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:contentDescription="@string/articles_favorite"
        app:layout_constraintBottom_toBottomOf="@+id/fav_item_list_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fav_item_list_avatar"
        app:layout_constraintVertical_bias="0.461"
        app:srcCompat="@drawable/ic_favorite_red_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>